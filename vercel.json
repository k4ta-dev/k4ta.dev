{
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/og.jpg",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "Content-Type", "value": "image/jpeg" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!og\\.jpg|og\\.png|favicon\\.ico|robots\\.txt|sitemap\\.xml|manifest\\.webmanifest|.*\\.(css|js|mjs|map|png|jpg|jpeg|gif|svg|webp|ico|txt|woff2?|ttf|eot|otf|mp4|webm|mp3|json)).*)",
      "destination": "/index.html"
    }
  ]
}
